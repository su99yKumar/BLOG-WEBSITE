<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>


    <body>
        <%# think why not use=%>
            <%- include('./partials/nav.ejs') %>



                <div class="blogs content">
                    <h2>All Blogs</h2>

                    <% if (blogs.length>0) { %>
                        <% blogs.forEach(blog=> { %>
                            <div class="this">
                                <a class="single" href="/blogs/create<%= blog._id %>">
                                    <h3 class="title">
                                        <%= blog.title %>
                                    </h3>
                                    <p class="snippet">
                                        <%= blog.snippet %>
                                </a>
                            </div>
                            <% }) %>

                                <% } else { %>
                                    <p>there are no blogs to display.....</p>
                                    <% } %>

                </div>
                <%- include('./partials/footer.ejs') %>
    </body>

</html>